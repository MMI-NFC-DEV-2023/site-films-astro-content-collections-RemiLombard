---
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";

const films = await getCollection("films");
---

<Layout pageTitle="Liste des films">
  <section class="flex flex-col gap-5 items-center">
    <h1 class="text-4xl font-bold">Liste des films</h1>
    <ul class="my-5 flex gap-5">
      {
        films.map((film) => (
          <li>
            <a
              href={`/films/${film.id}`}
              class="bg-blue-800 hover:bg-blue-600 hover:px-3 p-2 rounded-full text-white"
            >
              {film.data.titre}
            </a>
          </li>
        ))
      }
    </ul>
  </section>
  <!-- <pre>
        {JSON.stringify(films, null, 2)}
    </pre> -->
</Layout>
